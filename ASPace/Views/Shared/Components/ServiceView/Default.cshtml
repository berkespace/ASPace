@using EntityLayer.Concrete
@model List<Service>

<div class="section px-3 px-lg-4 pt-5" id="services">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Hizmetlerim</h2>
        </div>
        @foreach(var item in Model){

            <div class="text-center">
                <p class="mx-auto mb-3" style="max-width:600px">@item.Title</p>
            </div>
            <div class="row py-3">
                <div class="col-md-3 text-center" data-aos="fade-up" data-aos-delay="100">
                    <img class="mb-2" src="@item.Service1Url" width="96" height="96" alt="web geliştirme" />
                    <div class="h5">Web Geliştirme</div>
                </div>
                <div class="col-md-3 text-center" data-aos="fade-up" data-aos-delay="200">
                    <img class="mb-2" src="@item.Service2Url" width="96" height="96" alt="veri analizi" />
                    <div class="h5">Veri Analizi</div>
                </div>
                <div class="col-md-3 text-center" data-aos="fade-up" data-aos-delay="300">
                    <img class="mb-2" src="@item.Service3Url" width="96" height="96" alt="test süreci" />
                    <div class="h5">Test Süreci</div>
                </div>
                <div class="col-md-3 text-center" data-aos="fade-up" data-aos-delay="400">
                    <img class="mb-2" src="@item.ImageUrl" width="96" height="96" alt="mobil geliştirme" />
                    <div class="h5">Mobil Geliştirme</div>
                </div>
            </div>
        
        
        
        }
      
    </div>
</div>